<%- include('../blocks/header', {bot, user, path}) %>
<div class="row">
  <style>
      .switch {
        position: relative;
        display: inline-block;
        width: 50px;
        height: 24px;
      }

      .switch input {display:none;}

      .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        -webkit-transition: .4s;
        transition: .4s;
      }

      .slider:before {
        position: absolute;
        content: "";
        height: 16px;
        width: 16px;
        left: 4px;
        bottom: 4px;
        background-color: white;
        -webkit-transition: .4s;
        transition: .4s;
      }

      input:checked + .slider {
        background-color: #42b581;
      }

      input:focus + .slider {
        box-shadow: 0 0 1px #42b581;
      }

      input:checked + .slider:before {
        -webkit-transform: translateX(26px);
        -ms-transform: translateX(26px);
        transform: translateX(26px);
      }

      /* Rounded sliders */
      .slider.round {
        border-radius: 24px;
      }

      .slider.round:before {
        border-radius: 50%;
      }
      </style>
      <form method="post">
        <ul class="list-group list-group-flush">
          <li class="list-group-item" style="padding: 0;">
            <div class="input-group mb-2 mr-sm-2 mb-sm-0" style="width: 100%; margin: 0 !important;">
            </div>
          </li>
        </ul>
        <br>
        <label for="serverlog">Server-Log</label>
        <br>
        <div class="form-group">
          <select style="width: 100px;" name="serverLog" required class="form-control">
            <% guild.channels.forEach(channel => {
              if (channel.type != 'text') return;
              if (channel.id == serverLogChannel){ %>
                <option selected value="<%= channel.id %>">#<%= channel.name %></option>
            <% } %>
            <option value="<%= channel.id %>">#<%= channel.name %></option>
          <% }); %>
        </select>
      </div>
      <label for="ownerRole">Owner Role</label>
      <div class="form-group">
        <select style="width: 100px;" name="ownerRole" class="form-control">
          <% guild.roles.forEach(role => {
            if (role.name == '@everyone') return;
            if (role.name == ownerRole){ %>
              <option selected value="<%= role.name %>"><%= role.name %></option>
            <% } %>
            <option value="<%= role.id %>"><%= role.name %></option>
          <% }); %>
        </select>
      </div>
      <label for="ownerRole">Moderator Role</label>
      <div class="form-group">
        <select style="width: 100px;" name="modRole" class="form-control">
          <% guild.roles.forEach(role => {
            if (role.name == '@everyone') return;
            if (role.name == modRole){ %>
              <option selected value="<%= role.name %>"><%= role.name %></option>
            <% } %>
            <option value="<%= role.id %>"><%= role.name %></option>
          <% }); %>
        </select>
      </div>
      <label for="ownerRole">Helper Role</label>
      <div class="form-group">
        <select style="width: 100px;" name="helperRole" class="form-control">
          <% guild.roles.forEach(role => {
            if (role.name == '@everyone') return;
            if (role.name == joinRole){ %>
              <option selected value="<%= role.name %>"><%= role.name %></option>
            <% } %>
            <option value="<%= role.id %>"><%= role.name %></option>
          <% }); %>
        </select>
      </div>
      <label for="ownerRole">Muted Role</label>
      <div class="form-group">
        <select style="width: 100px;" name="muteRole" class="form-control">
          <% guild.roles.forEach(role => {
            if (role.name == '@everyone') return;
            if (role.name == muteRole){ %>
              <option selected value="<%= role.name %>"><%= role.name %></option>
            <% } %>
            <option value="<%= role.id %>"><%= role.name %></option>
          <% }); %>
        </select>
      </div>
      <label for="welcomeLog">Welcomer</label>
      <div class="form-group">
        <select style="width: 100px;" name="welcomeLog" class="form-control">
            <% guild.channels.forEach(channel => {
              if (channel.type != 'text') return;
              if (channel.id == welcomeLog){ %>
                <option selected value="<%= channel.id %>">#<%= channel.name %></option>
              <% } %>
              <option value="<%= channel.id %>">#<%= channel.name %></option>
            <% }); %>
        </select>
      </div>
      <label for="welcomeLog">Welcomer On/Off</label>
      <div class="form-group">
        <select style="width: 100px;" name="welcomes" class="form-control">
          <option selected value="<%= false %>">False</option>
          <option value="<%= true %>">True</option>
        </select>
      </div>
      <label for="welcomeLog">Server Logs On/Off</label>
      <div class="form-group">
        <select style="width: 100px;" name="logs" class="form-control">
          <option selected value="<%= false %>">False</option>
          <option value="<%= true %>">True</option>
        </select>
      </div>
      <div style="width: 100%; text-align: right; margin-top: 20px;">
        <button type="submit" class="btn btn-primary">Save Changes <i class="fa fa-fw fa-save" aria-hidden="true"></i></button>
      </div>
    </form>
  </div>
</div>
