<%- include('blocks/header', {bot, user, path}) %>
	<div class="jumbotron jumbotron-fluid mt-0">
		<div class="container">
			<div class="media">
				<img class="mr-3" src="<%= user.dynamicAvatarURL("png", 2048) %>" alt="Avatar">
				<div class="media-body">
					<h3 class="mt-0">Me</h5>
					Settings
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-6 col-sm-6 col-md-3 col-lg-3">
				<div class="card card-body">
					<h5 class="card-title">Rings:</h5>
					<p class="card-text"><%= profile.itemRing %></p>
				</div>
			</div>
			<div class="col-6 col-sm-6 col-md-3 col-lg-3">
				<div class="card card-body">
					<h5 class="card-title">Picks:</h5>
					<p class="card-text"><%= profile.itemPick %></p>
				</div>
			</div>
			<div class="col-6 col-sm-6 col-md-3 col-lg-3">
				<div class="card card-body">
					<h5 class="card-title">Married To:</h5>
					<p class="card-text"><%= profile.marriedTo ? bot.users.get(profile.marriedTo).username : 'Nobody' %></p>
				</div>
			</div>
			<div class="col-6 col-sm-6 col-md-3 col-lg-3">
				<div class="card card-body">
					<h5 class="card-title">Balance:</h5>
					<p class="card-text"><%= balance ? balance.amount : 0 %> Minicoins</p>
				</div>
			</div>
		</div>
		<form action="/manage/user/<%= user.id %>">
			<div class="form-row">
				<label for="description">Description</label>
				<textarea class="form-control" name="description" id="description" value="<%= profile.description %>"><%= profile.description %></textarea>
			</div>
			<div class="form-row mt-3">
				<input type="submit" class="btn btn-primary">
			</div>
		</form>
	</div>
<%- include('./blocks/footer') %>
