<%- include('blocks/header', {bot, user, path}) %>
<div class="container">
  <h1 class="display-3">Dashboard</h1>
  <ul class="list-unstyled">
    <% user.servers.forEach(guild => { %>
      <li class="media" style="padding: 10px;">
        <% if (guild.icon) { %>
          <img class="d-flex mr-3 rounded-circle" src="<%= guild.icon %>" style="width: 80px;" alt="">
        <% } else { %>
          <canvas style="background-color: #7289da" class="d-flex mr-3 rounded-circle" id="<%= guild.name.split(' ').join('').replace(`'`, ``) %>" width="80px" height="80px"></canvas>
          <script>
            function draw() {
              const ctx = document.getElementById("<%= guild.name.split(' ').join('').replace(`'`, ``) %>").getContext('2d');
              ctx.font = '30px Arial';
              ctx.textAlign = "center";
              ctx.fillStyle = "white";
              ctx.fillText("<%= guild.name.split(' ').map(v => v[0]).join('') %>", 40, 50);
            };
            draw();
          </script>
        <% } %>
        <div class="media-body">
            <h5 class="mt-0 mb-1"><%= guild.name %></h5>
            <a class="btn btn-primary btn-lg" role="button" href="/manage/server/<%= guild.id %>">Manage <i class="fa fa-fw fa-chevron-circle-right" aria-hidden="true"></i></a>
          </div>
        </li>
      <% }) %>
    </ul>

  <%- include('./blocks/footer') %>