<%- include('blocks/header', {bot, user, path}) %>
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <div class="media">
        <img class="mr-3" src="<%= client.user.dynamicAvatarURL("png", 2048) %>" alt="Avatar">
        <div class="media-body">
          <h3 class="mt-0">Mini Me</h5>
          Stats
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col col-10"><h3>Statistics</h3>
      </div>
    </div>
    <div class="row justify-content-md-center">
      <div class="col-5 text-nowrap"><i class="fa fa-fw fa-server" aria-hidden="true"></i> Servers:</div>
      <div class="col-5 text-nowrap"><strong><%= servers %></strong></div>
    </div>
    <div class="row justify-content-md-center">
      <div class="col-5 text-nowrap"><i class="fa fa-fw fa-clock-o" aria-hidden="true"></i> Uptime:</div>
      <div class="col-5 text-nowrap"><strong><%= uptime %></strong></div>
    </div>
    <div class="row justify-content-md-center">
      <div class="col-5 text-nowrap"><i class="fa fa-fw fa-users" aria-hidden="true"></i> Members:</div>
      <div class="col-5 text-nowrap"><strong><%= members %></strong></div>
    </div>
    <div class="row justify-content-md-center">
      <div class="col-5 text-nowrap"><i class="fa fa-fw fa-tasks" aria-hidden="true"></i> Memory:</div>
      <div class="col-5 text-nowrap"><strong><%= memoryUsage %> MB</strong></div>
    </div>
    <div class="row justify-content-md-center">
      <div class="col-5 text-nowrap"><i class="fa fa-fw fa-hashtag" aria-hidden="true"></i> Channels:</div>
      <div class="col-5 text-nowrap"><strong><%= channels %></strong></div>
    </div>
    <div class="row justify-content-md-center">
      <div class="col-5 text-nowrap"><i class="fa fa-fw fa-cog" aria-hidden="true"></i> Node.js Version:</div>
      <div class="col-5 text-nowrap"><strong><%= nVersion %></strong></div>
    </div>
  </div>
<% include ./blocks/footer %>